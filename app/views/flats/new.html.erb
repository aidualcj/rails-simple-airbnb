<!-- app/views/flats/new.html.erb -->
<div class="container mt-4">
  <h1>New Flat</h1>
  <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.button :submit, 'Create Flat', class: 'btn btn-primary' %>
  <% end %>
</div>
