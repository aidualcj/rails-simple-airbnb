<div class="container mt-4">
  <h1>All our flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p class="card-text">
              <i class="fas fa-user"></i> <%= flat.number_of_guests %>
              <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
            </p>
            <%= link_to 'More info', flat_path(flat), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
